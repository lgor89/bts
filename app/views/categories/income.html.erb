<div class="container">
  <div class="col-sm-6">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>
            <div class="col-sm-4">
              <p>Name:
              </p>
            </div>
          </th>
          <th><div class="col-sm-4">
              <p>Amount:</p>
            </div>
          </th>
        </tr>
      </thead>
      <% @category.each do |i| %>
        <% if i.cat_type =="income" %>
          <tbody>
            <tr>
              <td><div class="col-sm-4">
                  <p > <%= i.name %></p>
                </div>
              </td>
              <td><div class="col-sm-4">
                  <p > <%= i.summ %></p>
                </div>
              </td>
              <td><div class="col-sm-4">
                  <p >
    <%= link_to "Remove",category_path(i.id), method: :delete, class:"btn btn-info", role:"button"%>
                  </p>
                  <p >
    <%= link_to "Edit",edit_category_path(i.id), class:"btn btn-info", role:"button"%>
                  </p>
                </div>
              </td>
            </tr>
          </tbody>
        <% end %>
      <% end %>
    </table>
    <%= link_to "Add new category", new_category_path, class:"btn btn-info", role:"button"%>
  </div>
</div>
