<div class="row">
  <div class="col-md-2 col-md-offset-3">
    <%= form_for(@category) do |f| %>
      <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class:"form-control" %>
      </div>

      <div class="form-group">
      <%= f.label :type %>
      <%= select(:category, :cat_type,[['Income','income'],['Expense','expense']])%>
      </div>

      <div class="form-group">
      <%= f.label :amount %>
      <%= f.number_field :summ , class:"form-control"%>
      </div>

      <%= f.submit "Add new category", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

