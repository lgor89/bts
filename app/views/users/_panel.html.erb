<div class="panel panel-default">
  <div class="panel-heading">
    <div class="container">
      <div class="col-sm-2">
        <h4><%= @user.name %> </h3>
      </div>
      <div class="col-sm-4">
        <%= form_for(@user) do |f| %>
          <%= f.text_field :cat_name, placeholder: "category name" %>
          <%= f.submit "search", class: "btn btn-primary" %>
        <% end %>
      </div>
      <div class="container">
        <span> Search by date:
          <button type="button" class="btn btn-info" data-toggle="modal" data-target="#from">From</button>
        <button type="button" class="btn btn-info" data-toggle="modal" data-target="#to">To</button></span>
      </div>
    </div>
  </div>
</div>
